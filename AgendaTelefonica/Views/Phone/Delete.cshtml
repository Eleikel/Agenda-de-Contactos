@using AgendaTelefonica.Core.Application.ViewModels.Phone;
@model SavePhoneViewModel
@{
    ViewData["Title"] = "Eliminar Telefono";
}


<div class="row">

    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Esta seguro que desea eliminar el numero @Model.PhoneNumber de tus contactos?</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Phone" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="User" asp-action="Index" class="btn btn-warning">Cancelar</a>
                </form>

            </div>
        </div>
    </div>

</div>